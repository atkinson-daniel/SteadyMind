<section class='container'>
  <section class='row content'>
    <div class="col-md-2">
    </div>
    <div class="col-md-6">
      <h2>All <%= @facade.category.capitalize %> Videos</h2>
      <div id="player">
        <script src="https://www.youtube.com/player_api" ></script>
        <script>
          let player;
          let position;
          function onYouTubePlayerAPIReady() {
            player = new YT.Player('player', {
              width: '100%',
              height: '390px',
              videoId: '<%= @facade.current_video_id %>'
            });
          }
        </script>
      </div>
      <div class='video-links'>
        <ul class="list-group">
        <% @facade.paginated_videos.each do |video| %>
          <li class="list-group-item"><%= link_to video.title, "/all_resources?video_id=#{video.video_id}&category=#{video.category}&page=#{@facade.page}" %></li>
        <% end %>
        </ul>
        <%= will_paginate @facade.paginated_videos, :container => false %>
      </div>
    </div>
    <div class="additional-resources col-md-2">
      <a class="btn btn-outline-info resource-links" href='/all_resources?category=yoga'>All Yoga Videos</a>
      <a class="btn btn-outline-info resource-links" href='/all_resources?category=meditation'>All Meditation Videos</a>
      <a class="btn btn-outline-info resource-links" href='/all_resources?category=motivational'>All Motivational Videos</a>
    </div>
  </section>
  <br>
  <section class='row content'>
    <div class="col-md-2">
    </div>
    <div class="external-resources col-md-6">
      <h2>External Resources</h2>
      <ul class="list-group">
        <li class="list-group-item"><%= link_to 'National Suicide Prevention Lifeline', 'https://suicidepreventionlifeline.org/' %></li>
        <li class="list-group-item"><%= link_to 'Find a Therapist Near You', 'https://www.sondermind.com/' %></li>
        <li class="list-group-item"><%= link_to 'Yoga Classes Near You', 'https://mindbody.io/' %></li>
      </ul>
    </div>
  </section>
</section>
